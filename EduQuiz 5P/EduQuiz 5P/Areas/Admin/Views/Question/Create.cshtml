@model EduQuiz_5P.ViewModel.ImportQuestionVM
@{
    ViewData["Title"] = "Import câu hỏi";
}
<div class="content container-fluid">
    <div class="page-header invoices-page-header">
        <div class="row align-items-center">
            <div class="col">
                <div class="invoices-create-btn">
                    <a href="#" class="btn delete-invoice-btn">
                        <i data-feather="chevron-left"></i>
                        Preview
                    </a>
                </div>
            </div>
            <div class="col-auto">
                <div class="invoices-create-btn">
                    <button data-bs-toggle="modal" data-bs-target="#PreviewImport"
                            class="btn delete-invoice-btn">
                        <i data-feather="eye"></i>
                        Preview
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@ViewData["Title"]</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Exam">Quản lý đề thi</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form class="row" asp-action="Create" enctype="multipart/form-data">
                        <div class="col-12">
                            <h5 class="form-title"><span>Thông tin cơ bản</span></h5>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group local-forms">
                                <label>Lớp <span class="login-danger">*</span></label>
                                <select class="form-control select">
                                    <option value="">Chọn Lớp</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group local-forms">
                                <label>Môn học <span class="login-danger">*</span></label>
                                <select class="form-control select">
                                    <option value="">Chọn môn học</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group local-forms">
                                <label>Chương <span class="login-danger">*</span></label>
                                <select asp-for="ChapterId" class="form-control select">
                                    <option value="">Chọn chương</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group local-forms">
                                <label>Độ khó <span class="login-danger">*</span></label>
                                <select asp-for="DifficultyLevel" class="form-control select">
                                    <option value="">Chọn Độ khó</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group local-forms">
                                <label>File Input <span class="login-danger">*</span></label>
                                <div class="col-md-12">
                                    <input asp-for="UploadFile" class="form-control" type="file" placeholder="Chọn File">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="PreviewImport">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <form method="post">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Dữ liệu Import đề</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div id="previewData" class="row justify-content-center align-items-center" style="flex: 1;
                            overflow-y: auto;">
                        <div class="col-12">
                            <p class="fw-bold">
                                Câu 1. Trong không gian với hệ tọa độ $O x y z$, cho hai điểm $A(1 ; 2 ; 3), B(-2 ; 1 ; 5)$. Phương trình mặt cầu tâm
                                $A$ bán kính $A B$ là:
                            </p>
                        </div>
                        <div class="my-2">
                            <p><span class="fw-bold">A.</span>$\bar{z}=-a-bi$</p>
                            <p><span class="fw-bold">B.</span> $\bar{z}=-a-bi$</p>
                            <p><span class="fw-bold">C.</span> $\bar{z}=-a-bi$</p>
                            <p><span class="fw-bold">D.</span> $\bar{z}=-a-bi$</p>
                        </div>
                        <hr>
                        <div class="col-12">
                            <p class="fw-bold">
                                Câu 1. Trong không gian với hệ tọa độ $O x y z$, cho hai điểm $A(1 ; 2 ; 3), B(-2 ; 1 ; 5)$. Phương trình mặt cầu tâm
                                $A$ bán kính $A B$ là:
                            </p>
                        </div>
                        <div class="my-2">
                            <p><span class="fw-bold">A.</span>$\bar{z}=-a-bi$</p>
                            <p><span class="fw-bold">B.</span> $\bar{z}=-a-bi$</p>
                            <p><span class="fw-bold">C.</span> $\bar{z}=-a-bi$</p>
                            <p><span class="fw-bold">D.</span> $\bar{z}=-a-bi$</p>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Lưu</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>