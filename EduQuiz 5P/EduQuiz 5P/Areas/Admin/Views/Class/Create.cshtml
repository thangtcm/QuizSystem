@model List<Classes>
@using EduQuiz_5P.Models;
@{
    ViewData["Title"] = "Thêm lớp";
}

<div class="content container-fluid">

    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@ViewData["Title"]</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Class">Danh sách lớp</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" id="formCreate" method="post" enctype='multipart/form-data'>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-12">
                                <h5 class="form-title"><span>Điền thông tin lớp</span></h5>
                            </div>
                            <div class="col-12" id="createClassContainers">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="row create-dynamic">
                                        <div class="col-12 col-sm-4">
                                            <div class="form-group local-forms">
                                                <label>Tên Lớp <span class="text-danger">*</span></label>
                                                <input asp-for="@Model[i].ClassName" class="form-control">
                                                <span asp-validation-for="@Model[i].ClassName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <input type="button" id="btnAdd" class="btn btn-primary" value="Thêm" style="width: 10rem;">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="student-submit">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#btnAdd').on('click', function () {
            addNewObject('/Admin/Class/CreatePartial', '#createClassContainers');
        });
    </script>
}